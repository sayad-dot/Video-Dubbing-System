{
  "info": {
    "name": "Video Dubbing System API",
    "description": "Complete API collection for video dubbing system",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/health",
          "host": ["{{base_url}}"],
          "path": ["health"]
        }
      }
    },
    {
      "name": "API Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/health",
          "host": ["{{base_url}}"],
          "path": ["api", "health"]
        }
      }
    },
    {
      "name": "Upload SRT File",
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "srt",
              "type": "file",
              "src": "/path/to/your/sample.srt"
            }
          ]
        },
        "url": {
          "raw": "{{base_url}}/api/srt/upload",
          "host": ["{{base_url}}"],
          "path": ["api", "srt", "upload"]
        }
      }
    },
    {
      "name": "Get Available Voices",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/srt/voices",
          "host": ["{{base_url}}"],
          "path": ["api", "srt", "voices"]
        }
      }
    },
    {
      "name": "Start Workflow",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"srt\": \"1\\n00:00:01,000 --> 00:00:03,000\\nHello World\\n\\n2\\n00:00:04,000 --> 00:00:06,000\\nThis is a test message\\n\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/workflow",
          "host": ["{{base_url}}"],
          "path": ["api", "workflow"]
        }
      }
    },
    {
      "name": "Check Workflow Status",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/workflow/{{job_id}}/status",
          "host": ["{{base_url}}"],
          "path": ["api", "workflow", "{{job_id}}", "status"]
        }
      }
    },
    {
      "name": "Get Workflow Result",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/workflow/{{job_id}}/result",
          "host": ["{{base_url}}"],
          "path": ["api", "workflow", "{{job_id}}", "result"]
        }
      }
    },
    {
      "name": "Download Audio File",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/srt/download/{{filename}}",
          "host": ["{{base_url}}"],
          "path": ["api", "srt", "download", "{{filename}}"]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "job_id",
      "value": "your-job-id-here",
      "type": "string"
    },
    {
      "key": "filename",
      "value": "your-audio-file.mp3",
      "type": "string"
    }
  ]
}
